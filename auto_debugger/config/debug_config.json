{
  "log_level": "INFO",
  "log_file": "auto_debugger/logs/debugger.log",
  "reports_dir": "auto_debugger/reports",
  "max_line_length": 88,
  "max_complexity": 10,
  "scan_interval": 30,
  "excluded_dirs": [
    "venv",
    "__pycache__",
    ".git",
    "node_modules",
    ".mypy_cache"
  ],
  "file_extensions": [
    ".py"
  ],
  "monitoring": {
    "enabled": true,
    "interval": 30,
    "auto_fix": false
  },
  "analysis": {
    "syntax_check": true,
    "code_quality": true,
    "performance": true,
    "security": false
  },
  "reporting": {
    "generate_html": true,
    "keep_reports": 10,
    "email_alerts": false
  }
}
