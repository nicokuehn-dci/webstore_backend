# WebStore Configuration
# Copy this file to .env and customize as needed

# Application Settings
APP_DEBUG=false
APP_LOG_LEVEL=INFO
APP_MONITORING_ENABLED=true

# Database Settings (for future SQLAlchemy integration)
DATABASE_URL=sqlite:///webstore.db
DATABASE_POOL_SIZE=5

# Security Settings
SECRET_KEY=your-secret-key-here
BCRYPT_ROUNDS=12

# Performance Settings
MAX_MEMORY_USAGE=512MB
ENABLE_PERFORMANCE_MONITORING=true

# Feature Flags
ENABLE_RICH_UI=true
ENABLE_AUTO_DEBUGGER=true
ENABLE_SYSTEM_MONITORING=true

# Paths
LOG_DIRECTORY=logs
REPORTS_DIRECTORY=reports
BACKUP_DIRECTORY=backups

# Auto Debugger Settings
DEBUGGER_INTERVAL=30
DEBUGGER_MAX_LOG_SIZE=10MB
DEBUGGER_RETENTION_DAYS=7
